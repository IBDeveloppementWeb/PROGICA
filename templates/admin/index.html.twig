{% extends 'base.html.twig' %}

{% block title %}Dashboard Gites
{% endblock %}

{% block body %}
	<h1>Administration des gites PROGICA</h1>

	<a href="{{ path('admin.new') }}" class="btn btn-success">Ajouter un gite</a>
	<div class="row">
		<table class="table table-striped">
			<thead>
				<th>ID</th>
				<th>NOM</th>
				<th>VILLE</th>
				<th>ACTION</th>
			</thead>
			<tbody>
				{% for gite in gites %}
					<tr>
						<th>#{{gite.id}}</th>
						<th>{{gite.nom}}</th>
						<th>{{gite.ville}}</th>
						<th>
							<a href="{{ path('admin_edit', {'id': gite.id}) }}" class="btn btn-primary">Editer</a>
							<a href="" class="btn btn-danger">Supprimer</a>
						</th>
					</tr>
				{% endfor %}

			</tbody>
		</table>
	</div>
	<div class="d-flex justify-content-center">
		{% do gites.setPageRange(2) %}
		{{ knp_pagination_render(gites, 'pagination.html.twig') }}
	</div>
{% endblock %}
